<Window x:Class="PdfSorter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cefSharp="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
        xmlns:pdfSorter="clr-namespace:PdfSorter"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Column="0"
                    Grid.Row="0">
            <TextBox Name="TypeAheadTextBox" 
                     DockPanel.Dock="Top" 
                     TextChanged="TypeAheadTextBox_OnTextChanged"
                     PreviewKeyDown="TypeAheadTextBox_OnPreviewKeyDown"/>
            <ListBox Name="CandidateListBox"
                         VerticalAlignment="Stretch"
                         ScrollViewer.VerticalScrollBarVisibility ="Auto"/>
        </DockPanel>
        <cefSharp:ChromiumWebBrowser Name="PreviewBrowser"
                                     Grid.Column="1"
                                     Grid.Row="0"
                                     FrameLoadStart="ChromiumWebBrowser_OnFrameLoadStart"
                                     FrameLoadEnd="ChromiumWebBrowser_OnFrameLoadEnd"/>
    </Grid>
</Window>
